<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B90E1"
    tools:context=".HalamanAwal">

    <ImageView
        android:id="@+id/imageView"
        android:paddingLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/NamaAPP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ucapan"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="35dp"
        android:text="Inventoryku"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tanya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NamaAPP"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_italic"
        android:paddingStart="35dp"
        android:text="apakah anda sudah memiliki akun?"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/ucapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:fontFamily="@font/roboto"
        android:paddingStart="35dp"
        android:text="Selamat Datang di"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/daftar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tanya"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#B1D7EC"
        android:text="Buat Akun" />

    <Button
        android:id="@+id/login"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tanya"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="47dp"
        android:backgroundTint="#B1D7EC"
        android:text="Login" />
</RelativeLayout>