<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanInput">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_tambah_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_tambah_barang"
            android:id="@+id/update_nama">
        </EditText>
        <TextView
            android:id="@+id/text_jumlah_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_nama"
            android:text="Jumlah Barang"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/text_jumlah_barang"
            android:id="@+id/update_jumlah">
        </EditText>
        <TextView
            android:id="@+id/text_beli_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_jumlah"
            android:text="Harga Beli"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/text_beli_barang"
            android:id="@+id/update_beli">
        </EditText>
        <TextView
            android:id="@+id/text_jual_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_beli"
            android:text="Harga Jual"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@+id/text_jual_barang"
            android:id="@+id/update_jual">
        </EditText>
        <TextView
            android:id="@+id/text_deskripsi_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_jual"
            android:text="Deskripsi"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/text_deskripsi_barang"
            android:id="@+id/update_deskripsi">
        </EditText>

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/update_deskripsi"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:backgroundTint="@color/blue"
            android:text="Edit"
            android:textSize="20sp"></Button>
    </RelativeLayout>
</ScrollView>